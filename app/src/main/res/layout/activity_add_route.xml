<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddRouteActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/routeNoTextView"
                android:layout_width="271dp"
                android:layout_height="42dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/custom_green_view_background"
                android:ems="10"
                android:hint="Route number"
                android:textAlignment="center"
                android:textColor="@color/greenBG"
                android:textColorHint="@color/greenBG"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <SeekBar
                android:id="@+id/seekBarTime"
                android:layout_width="294dp"
                android:layout_height="54dp"
                android:layout_marginTop="12dp"
                android:max="200"
                android:min="0"
                android:progress="1"
                app:layout_constraintEnd_toEndOf="@+id/routeNoTextView"
                app:layout_constraintStart_toStartOf="@+id/routeNoTextView"
                app:layout_constraintTop_toBottomOf="@+id/estimatedTimeTextView" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="93dp"
                android:layout_height="37dp"
                android:layout_marginTop="12dp"
                android:text="@string/estimated_route_time"
                android:textColor="@color/greenBG"
                app:layout_constraintStart_toStartOf="@+id/routeNoTextView"
                app:layout_constraintTop_toBottomOf="@+id/routeNoTextView" />

            <TextView
                android:id="@+id/estimatedTimeTextView"
                android:layout_width="146dp"
                android:layout_height="45dp"
                android:background="@drawable/custom_green_view_background"
                android:padding="10dp"
                android:textAlignment="center"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/textView3" />

            <Button
                android:id="@+id/addRoute"
                android:layout_width="199dp"
                android:layout_height="47dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/custom_green_bacground_filled"
                android:text="@string/add_stations"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/seekBarTime"
                app:layout_constraintStart_toStartOf="@+id/seekBarTime"
                app:layout_constraintTop_toBottomOf="@+id/seekBarTime" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
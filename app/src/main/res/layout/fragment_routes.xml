<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RoutesFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@android:color/holo_green_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleMargin="0dp">

        <Button
            android:id="@+id/btnDeleteAllRoutes"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:background="@drawable/custom_view_background_filled"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/clear_routes"
            android:textColor="@android:color/holo_green_light"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="5dp" />

        <Button
            android:id="@+id/btnGetRoutesFromApi"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_gravity="end"
            android:background="@drawable/custom_view_background_filled"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/get_routes"
            android:textColor="@android:color/holo_green_light"
            tools:layout_editor_absoluteX="256dp"
            tools:layout_editor_absoluteY="5dp" />
    </androidx.appcompat.widget.Toolbar>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:indeterminate="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <ExpandableListView
        android:id="@+id/expandableRoutesList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:childDivider="@null"
        android:divider="@null"
        android:layoutDirection="rtl"
        android:overScrollMode="never"
        android:scrollbarThumbVertical="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>